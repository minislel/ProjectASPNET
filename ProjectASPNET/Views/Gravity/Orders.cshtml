@using X.PagedList;
@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core;
@model IPagedList<ProjectASPNET.Models.CustOrder>

<h2>Orders for Customer ID: @Model.First().CustomerId</h2>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString()</td>
                <td>
                    <a class="btn btn-primary" href="@Url.Action("OrderDetails", new { OrderId = order.OrderId })">
                        Details
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
